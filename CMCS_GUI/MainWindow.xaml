<Window x:Class="CMCS_GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Contract Monthly Claim System - Login" Height="350" Width="600" Background="#F8F8F8">
    <Grid>
        <Label Content="Login" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="20" Foreground="#333333" Margin="0,20,0,0"/>

        <!-- Username Field -->
        <Label Content="Username:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,80,0,0" Foreground="#333333"/>
        <TextBox x:Name="UsernameTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="300" Margin="200,80,0,0" Background="#FFFFFF" BorderBrush="#C7C7CC" Foreground="#333333"/>

        <!-- Password Field -->
        <Label Content="Password:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,130,0,0" Foreground="#333333"/>
        <PasswordBox x:Name="PasswordBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="300" Margin="200,130,0,0" Background="#FFFFFF" BorderBrush="#C7C7CC" Foreground="#333333"/>

        <!-- Login Button -->
        <Button Content="Login" HorizontalAlignment="Center" VerticalAlignment="Top" Width="100" Margin="0,200,0,0" Background="#007AFF" Foreground="White" BorderBrush="#007AFF" Click="LoginButton_Click"/>
    </Grid>
</Window>

